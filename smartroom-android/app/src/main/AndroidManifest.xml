<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kucik.smartroom" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kucik.smartroom.bluetooth.StartPairedDevice"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kucik.smartroom.SaklarHistory"
            android:label="@string/title_activity_saklar_history"
            android:parentActivityName="com.kucik.smartroom.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kucik.smartroom.MainActivity" />
        </activity>
        <activity android:name="com.kucik.smartroom.PringIntro"
            android:label="@string/app_intro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.kucik.smartroom.MainActivity"
            android:label="@string/app_intro"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>